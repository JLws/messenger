<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>A simple messenger</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <header class="head-block">
    <h2>A simple messenger</h2>
  </header>
  <div class="main-block-profile">
    <div class="profile-info">
      <h3>{{name}} {{surname}}</h3>
      <p>{{username}}</p>
      <ul class="menu-profile">
        {{#if button.add}}
          <li><a href="?people={{username}}&addfriend=true">Add to friends</a></li>
          <li><a href="profile">Profile</a></li>
        {{/if}}
        {{#if button.rm}}
          <li><a href="?people={{username}}&rmfriend=true">Remove from friends</a></li>
          <li><a href="profile">Profile</a></li>
        {{/if}}
        <li><a href="settings">Setting profile</a></li>
        <li><a href="signout">Exit</a></li>
      </ul>
    </div>
    <div class="friends-block">
      <form class="friends-search" method="POST">
        <input type="text" name="searchName" placeholder="Name friend">
        <button>Search</button>
      </form>
      <div class="friends-list">
        {{#each userList}}
          <li><a href="?people={{this}}">{{this}}</a></li>
        {{else}}
          <li>You don't have friends.</li>
        {{/each}}
      </div>
    </div>
  </div>
  <footer class="footer-block">
  </footer>
</body>
</html>
